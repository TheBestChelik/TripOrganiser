@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: url('https://images.pexels.com/photos/1285625/pexels-photo-1285625.jpeg?cs=srgb&dl=pexels-apasaric-1285625.jpg&fm=jpg') no-repeat center center fixed;
            background-size: cover;
            color: white;
            text-align: center;
        }
        .overlay {
            background-color: rgba(0, 0, 0, 0.6);
            position: absolute;
            top: 0; left: 0;
            width: 100%; height: 100%;
        }
        .container-content {
            position: relative;
            z-index: 2;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }
        .btn-custom {
            font-size: 1.5rem;
            padding: 15px 30px;
            border-radius: 30px;
            background-color: #ff9800;
            border: none;
            transition: 0.3s;
        }
        .btn-custom:hover {
            background-color: #e68900;
        }
    </style>
</head>
<body>
    <div class="overlay"></div>
    <div class="container-content">
        <h1 class="display-3 fw-bold">Welcome to TripOrganiser</h1>
        <p class="lead">Plan, organize, and enjoy your travels with ease.</p>
        <a href="/trips" class="btn btn-custom mt-4">Explore Trips</a>
    </div>
</body>
</html>
