@model TripOrganiser.Models.Trip

@{
    ViewData["Title"] = "Delete the trip";
}

<h1 class="text-center my-4">@ViewData["Title"]</h1>

<div class="container">
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-danger text-white">
            <h4 class="card-title">Are you sure you want to delete this trip?</h4>
        </div>
        <div class="card-body">
            <h5 class="card-title">@Model.DestinationCity</h5>
            <dl class="row">
                <dt class="col-sm-3">Destination:</dt>
                <dd class="col-sm-9">@Model.DestinationCity</dd>

                <dt class="col-sm-3">From:</dt>
                <dd class="col-sm-9">@Model.DepartureAddress</dd>

                <dt class="col-sm-3">Starting:</dt>
                <dd class="col-sm-9">@Model.DepartureDateTime.ToString("g")</dd>

                <dt class="col-sm-3">Finishing:</dt>
                <dd class="col-sm-9">@Model.ReturnDateTime.ToString("g")</dd>

                <dt class="col-sm-3">Capacity:</dt>
                <dd class="col-sm-9">@Model.Capacity</dd>

                <dt class="col-sm-3">Description:</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Owner:</dt>
                <dd class="col-sm-9">@Model.InitialOwner?.Email</dd>
            </dl>
        </div>
        <div class="card-footer text-muted">
            <form asp-action="Delete" class="d-inline">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
            <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
        </div>
    </div>
</div>


